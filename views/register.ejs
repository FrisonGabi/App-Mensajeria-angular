<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/styles.css">
    <title>Registro</title>
</head>
<body>
    
    <div class="div-form-register">
        <h2>Registro de usuario</h2>
        <form action="/register" class="register-form" method="post" id="formRegister">
            
            <label for="user">Usuario</label>
            <input type="text" name="user" id="user" required>
            
            <label for="name">Nombre y Apellido</label>
            <input type="text" name="name" id="name">

            <label for="country">Pais</label>
            <select name="country" id="country" class="select-style">
                <option value="argentina">Argentina</option>
                <option value="brasil">Brasil</option>
                <option value="estados unidos">Estados Unidos</option>
                <option value="españa">España</option>
            </select>

            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" required>
            <label for="password">Repetir Contraseña</label>
            <input type="password" name="password2" id="password2" required>

             <div style="display:inline;">
                <a href="/login" class="btn-cancel">Cancelar</a>
                <input type="submit" value="Aceptar">
             </div>
           
        </form>
        <p id="err"> </p>
    </div>

    <script>
        formRegister.addEventListener("submit", (e)=> {
            if(password.value !== password2.value){
                e.preventDefault();
                err.innerHTML = "Las contraseñas no son iguales"
                setTimeout(()=>{
                    err.innerHTML =" ";
                }, 1500)
            }
        })


    </script>

 

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.10/dist/sweetalert2.all.min.js"></script>

    <% if(typeof alert!="undefined"){ %>
        <script>
            Swal.fire({
                titlte:"<%= alerTitle %>",
                text:"<%= alertMessage %>",
                icon:"<%= alertIcon %>",
                showConfirmButton:"<%= showConfirmButton %>",
                timer:"<%= timer %>"
            }).then(()=>{
                window.location="/<%= ruta %>"
            })
        </script> 
    <% } %> 
</body>
</html>
